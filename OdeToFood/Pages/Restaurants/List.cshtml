@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
}

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div style="display:flex">
            <input type="search" class="form-control" asp-for="SearchTerm" />
            <span>
                <button class="btn btn-dark">
                    Search
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>@restaurant.Name</td>
            <td>@restaurant.Location</td>
            <td>@restaurant.Cuisine</td>
            <td>
                <a asp-page="./Detail" asp-route-restaurantId="@restaurant.Id"
                   class="btn btn-outline-primary">Details</a>
                <a asp-page="./Edit" asp-route-restaurantId="@restaurant.Id"
                   class="btn btn-warning">Edit</a>
            </td>
        </tr>
    }
</table>

<a asp-page=".\Edit" class="btn btn-primary" >New Restaurant</a>